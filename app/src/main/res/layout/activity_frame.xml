<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameActivity"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:padding="16dp"
    android:id="@+id/activity_frame"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame_main"
        android:name="com.example.happy.HomeFragment"
        android:layout_weight="10"
        />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame_func"
        android:name="com.example.happy.FuncFragment"
        android:layout_weight="10"
        />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame_setting"
        android:name="com.example.happy.SettingFragment"
        android:layout_weight="10"
        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:id="@+id/bottomGroup"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rdo_home"
            />
        <RadioButton
            android:id="@+id/radioFunc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rdo_func"
            />
        <RadioButton
            android:id="@+id/radioSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rdo_setting"
            />


        </RadioButton>


</LinearLayout>